        xmlns:local="clr-namespace:FileRenamer"
        xmlns:view="clr-namespace:FileRenamer.View"
        Title="File Renamer" Height="600" Width="550">
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml" />
    </Window.Resources>
    <Grid Margin="10,10,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <view:FileListView DataContext="{Binding Path=FileList}"/>
        <TabControl x:Name="StrategyTabs" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.Row="1"
                    ItemsSource="{Binding Path=Strategies}" SelectedIndex="{Binding Path=SelectedStrategy}"
            ItemTemplate="{StaticResource TabItemTemplate}"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="cmbNameSuffix" Grid.Column="0" HorizontalAlignment="Left" Margin="10,10,10,0" Grid.Row="1" VerticalAlignment="Bottom" 
                                  ItemsSource="{Binding Path=NameSuffixOptions, Mode=OneTime}"
                       SelectedIndex="{Binding Path=NameSuffixSelection}" Width="100"/>
            <!--<ItemsControl Margin="10,10,10,0" HorizontalAlignment="Right" Grid.Column="2"
                        DataContext="{Binding Path=Commands}" 
                        ItemTemplate="{StaticResource CommandsTemplate}" />-->
            <ItemsControl IsTabStop="False" ItemsSource="{Binding Path=Commands}" Grid.Column="2">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Margin="10,10,10,10" Content="{Binding Path=DisplayName}" Command="{Binding Path=Command}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
