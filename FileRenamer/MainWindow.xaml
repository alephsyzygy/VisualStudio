<Window x:Class="FileRenamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Renamer" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" />
        <ListView x:Name="FileNameListView" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Original Filename" DisplayMemberBinding=
                    "{Binding Path=Item1}" Width="200"/>
                    <GridViewColumn Header="New Filename" DisplayMemberBinding=
                    "{Binding Path=Item2}" Width="200" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Choose Files" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,288,0,0" Click="Button_Click"/>

    </Grid>
</Window>
