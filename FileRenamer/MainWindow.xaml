<Window x:Class="FileRenamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Renamer" Height="585.136" Width="452.027">
    <Grid Margin="0,0,36,-51">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <ListView x:Name="FileNameListView" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.ColumnSpan="2" MinHeight="300" Height="300">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Original Filename" DisplayMemberBinding=
                    "{Binding Path=Item1}" Width="200"/>
                        <GridViewColumn Header="New Filename" DisplayMemberBinding=
                    "{Binding Path=Item2}" Width="200" />
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Choose Files" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <TabControl x:Name="StrategyTabs" Height="230" Width="405" IsEnabled="False">
                <TabItem Header="Insert Characters">
                    <Grid Background="#FFE5E5E5" >
                        <Label Content="Text to insert:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="InsertText" HorizontalAlignment="Left" Height="23" Margin="97,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="InsertStrategy_TextChanged" TextInput="InsertStrategy_TextChanged"/>
                        <Label Content="Position:" HorizontalAlignment="Left" Margin="21,52,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.616,-0.363"/>
                        <TextBox x:Name="InsertPos" HorizontalAlignment="Left" Height="23" Margin="97,52,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" PreviewTextInput="TextBox_PreviewTextInput" TextChanged="InsertStrategy_TextChanged"/>
                    </Grid>
                </TabItem>
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </StackPanel>

    </Grid>
</Window>
